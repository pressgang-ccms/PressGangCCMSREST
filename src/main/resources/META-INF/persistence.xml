<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
	<persistence-unit name="PressGangCCMS" transaction-type="JTA">
		<!-- <provider>org.hibernate.ejb.HibernatePersistence</provider> -->
		<jta-data-source>java:/PressGangCCMSDatasource</jta-data-source>
        <jar-file>resource-server-provider-1.0-SNAPSHOT.jar</jar-file>
        <jar-file>pressgang-ccms-model-1.1-SNAPSHOT.jar</jar-file>
        <class>org.jboss.pressgang.ccms.restserver.envers.LoggingRevisionEntity</class>
        <class>org.jboss.pressgang.belay.oauth2.resourceserver.data.model.OAuth2RSScope</class>
        <class>org.jboss.pressgang.belay.oauth2.resourceserver.data.model.OAuth2RSEndpoint</class>

		<properties>
	        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
	        <property name="hibernate.hbm2ddl.auto" value="validate"/>
	        <property name="hibernate.show_sql" value="false"/>
	        <property name="hibernate.format_sql" value="false"/>
	        <property name="jboss.entity.manager.factory.jndi.name" value="java:jboss/EntityManagerFactory"/>
	        <property name="hibernate.jdbc.batch_size" value="20" />
	        <property name="hibernate.cache.use_second_level_cache" value="true"/>
	        <property name="hibernate.cache.use_query_cache" value="false" />
	        <property name="hibernate.cache.use_minimal_puts" value="true"/>
	        
	        <!-- Hibernate Search Properties -->
	        <property name="hibernate.search.default.directory_provider" value="filesystem"/>
	        <property name="hibernate.search.default.indexBase" value="/var/lucene/indexes"/> 
	        
	        <!-- Envers events -->
	        <property name="org.hibernate.envers.audit_strategy" value="org.hibernate.envers.strategy.ValidityAuditStrategy" />
      </properties>
   </persistence-unit>
    
</persistence>
